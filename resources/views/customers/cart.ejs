<div class="cart py-16">

    <% if(session.cart) {%>
    <div class="order container mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="" alt="">
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>
        <div class="item-list">
            <% for(let item of Object.values(session.cart.items)) { %>
            <div class="flex  items-center my-8">
                <img src="/img/<%= item.item.image %>" alt="" class="w-24">
                <div class="ml-4 flex-1" >
                    <h1></h1>
                    <span><%= item.item.name %></span>
                </div>
                <span class="flex-1"><%= item.qty %></span>
                <span class="font-bold text-lg"><%= item.item.price * item.qty%>&#8377;</span>
            </div>
            <% } %>
        </div>

        <hr>
        <div class="text-right py-4">
            <div>
                <span class="text-lg font-bold">Total Amount:</span>
                <span class="amount text-2xl font-bold ml-2"><%= session.cart.totalPrice%> &#8377;</span>
            </div>
            <div>
                <form action="" class="mt-12">
                    <input class="border border-gray-400 p-2 w-1/2 mb-4" placeholder="phone number" type="text">
                    <input class="border border-gray-400 p-2 w-1/2" placeholder="Address" type="text">
                    <div>
                        <button type="submit" class="px-6 py-2 rounded-full  bg-red-600 text-white  mt-8">Order now</button>
                    </div>
                    
                </form>
            </div>
            <a href="" class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Login to continue</a>
        </div>
    </div>
    <% } else { %>


        <div class="container mx-auto text-center h-screen flex items-center justify-center">
        <div>
        <h1 class="text-3xl font-bold mb-2">Cart is Empty</h1>
        <p class="text-gray-500">You probably haven't ordered anything yet</p>
        <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go back</a>
        </div>
    </div>
     <% } %>
</div>
